<div class="container d-flex justify-content-center flex-column">
    <h1 class="text-center">Enter your email</h1>

    <p class="h4 text-dark mb-4 text-center">The email you write will receive a restoration link only if it is registered</p>
    <div class="row justify-content-center">
        <form id="restoreRequestForm" class="col-12 col-md-4 bg-info rounded p-4 shadow">
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">@</span>
                <input type="text" class="form-control" placeholder="email" aria-label="Username"
                    aria-describedby="basic-addon1" name="email">
            </div>

            <input type="submit" id="submitter" class="btn btn-dark col-md-12">
        </form>
    </div>
    <p id="message" class="h4 text-center text-dark my-5 py-5"></p>
</div>



<script src="/js/restoreRequest.js"></script>